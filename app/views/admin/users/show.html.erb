<h1>管理用ユーザーの詳細</h1>

<%= link_to 'ユーザー一覧', admin_users_path, class: "btn btn-primary btn-sm" %>

<table class = "table table-hover" >
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>優先度</th>
    <th>状態</th>
    <th>作成日時</th>
  </tr>

  <% @user.tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.deadline %></td>
      <td><%= task.priority %></td>
      <td><%= task.status %></td>
      <td><%= task.created_at %></td>
    </tr>
　 <% end %>
</table>
