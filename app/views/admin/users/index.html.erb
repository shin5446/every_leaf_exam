<h1>管理用ユーザー一覧</h1>

<%= link_to '新しくユーザーをを投稿する', new_admin_user_path, class: "btn btn-primary btn-sm" %>

<table class = "table table-hover" >
  <tr>
    <th><%= User.human_attribute_name(:name) %></th>
    <th><%= User.human_attribute_name(:count) %></th>
    <th><%= User.human_attribute_name(:email) %></th>
    <th><%= User.human_attribute_name(:admin) %></th>
    <th><%= User.human_attribute_name(:created_at) %></th>
    <th><%= User.human_attribute_name(:updated_at) %></th>
  </tr>
 <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.tasks.size %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? ? 'あり' : 'なし' %></td>
      <td><%= user.created_at %></td>
      <td><%= user.updated_at %></td>
      <td><%= link_to '詳細を確認する', admin_user_path(user), class: "btn btn-outline-dark btn-sm" %></td>
      <td><%= link_to "ユーザーを編集する", edit_admin_user_path(user), class: "btn btn-outline-dark btn-sm" %></td>
      <td><%= button_to 'ユーザーを削除する', [:admin, user], method: :delete,data: { confirm: '本当に削除していいですか？'}, class: "btn btn-danger" %></td>
    </tr>
 </tbody>
  <% end %>
</table>