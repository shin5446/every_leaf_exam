<h1>ユーザー登録</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :名前 %>
  <%= f.text_field :name, class:"form-control form-group" %>

  <%= f.label :メールアドレス %>
  <%= f.email_field :email, class:"form-control form-group" %>

  <%= f.label :パスワード %>
  <%= f.password_field :password, class:"form-control form-group" %>

  <%= f.label :パスワード（確認） %>
  <%= f.password_field :password_confirmation, class:"form-control form-group" %>

  <%= f.submit "登録する", class: "btn btn-outline-info btn-sm" %>
<% end %>